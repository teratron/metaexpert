# {{ project_name }} Environment Configuration
#
# This file contains environment variables for your trading expert project.
# Copy this file to .env and fill in your actual credentials and settings.
# Keep this file secure and never commit your .env file to version control.

# Exchange Configuration
EXCHANGE_NAME="{{ exchange | upper }}"
{{ exchange | upper }}_API_KEY="your_api_key_here"
{{ exchange | upper }}_API_SECRET="your_api_secret_here"
{% if requires_passphrase -%}
{{ exchange | upper }}_API_PASSPHRASE="your_passphrase_here"
{% endif %}

# Trading Configuration
TRADING_MODE="live"  # Options: live, paper, backtest
SYMBOL="{{ default_symbol | default('BTCUSDT') }}"
CONTRACT_TYPE="{{ default_contract_type | default('linear') }}"  # Options: linear, inverse
MARGIN_MODE="{{ default_margin_mode | default('cross') }}"  # Options: cross, isolated

# Risk Management
LEVERAGE={{ default_leverage | default(10) }}
POSITION_SIZE="{{ default_position_size | default('1%') }}"
STOP_LOSS={{ default_stop_loss | default(0.05) }}  # 5% as decimal
TAKE_PROFIT={{ default_take_profit | default(0.10) }}  # 10% as decimal

# Logging Configuration
LOG_LEVEL="{{ default_log_level | default('INFO') }}"
LOG_FILE="logs/{{ project_name }}.log"

# API Rate Limits
RATE_LIMIT_BUFFER={{ default_rate_limit_buffer | default(0.8) }}

# Webhook Configuration (Optional)
WEBHOOK_ENABLED={{ default_webhook_enabled | default(false) | lower }}
WEBHOOK_URL="{{ default_webhook_url | default('') }}"
