# Example environment variables

APP_NAME="MetaExpert"
LIB_NAME="metaexpert"

# Database
DB_NAME=""
DB_USER=""
DB_PASSWORD=""
DB_HOST="localhost"
DB_PORT=5432

# Logging

# Default log levels (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL="DEBUG"
LOG_TRADE_LEVEL="INFO"
LOG_ERROR_LEVEL="ERROR"

# Default file names
LOG_FILE="expert.log"
LOG_TRADE_FILE="trades.log"
LOG_ERROR_FILE="errors.log"

# Directory configuration
LOG_DIRECTORY="logs"

# File rotation settings
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Format settings
LOG_FORMAT="[%(asctime)s] %(levelname)s: %(name)s: %(message)s"
LOG_DETAILED_FORMAT="[%(asctime)s] %(levelname)s: %(name)s:%(funcName)s:%(lineno)d: %(message)s"
LOG_CONFIG_FILE="config.json"

# Enhanced configuration flags
LOG_CONSOLE_LOGGING_ENABLED=true
LOG_STRUCTURED_LOGGING_ENABLED=false
LOG_ASYNC_LOGGING_ENABLED=false

# PyPI
UV_PUBLISH_TOKEN=""
UV_PUBLISH_USERNAME=""
UV_PUBLISH_PASSWORD=""
